{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "nic_name": {
          "type": "string"
      },
      "location": {
          "type": "string"
      },
      "sub_id": {
          "type": "string"
      }
  },
  "resources": [
      {
          "name": "[parameters('nic_name')]",
          "type": "Microsoft.Network/networkInterfaces",
          "apiVersion": "2019-07-01",
          "location": "[parameters('location')]",
          "dependsOn": [],
          "properties": {
              "ipConfigurations": [
                  {
                      "name": "ipconfig1",
                      "properties": {
                          "privateIpAddressVersion": "IPv4",
                          "privateIPAllocationMethod": "Dynamic",
                          "publicIPAddress": {
                            "id": "[concat('/subscriptions/', parameters('sub_id'), '/resourceGroups/rg-az-lab-', parameters('nic_name'), '/providers/Microsoft.Network/publicIPAddresses/ip-az-lab-', parameters('nic_name'))]"
                          },
                          "subnet": {
                            "id": "[concat('/subscriptions/', parameters('sub_id'), '/resourceGroups/rg-az-lab-rlx-author', '/providers/Microsoft.Network/virtualNetworks/vn-az-we-lab/subnets/sn-az-lab-rlx-nebula')]"
                          }
                      }
                  }
              ],
              "networkSecurityGroup": {
                "id": "[concat('/subscriptions/', parameters('sub_id'), '/resourceGroups/rg-az-lab-', parameters('nic_name'), '/providers/Microsoft.Network/networkSecurityGroups/nsg-az-lab-', parameters('nic_name'))]"
              }
          },
          "tags": {}
      }
  ]
}

